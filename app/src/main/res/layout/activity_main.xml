<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_gravity="center_vertical">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тренируй свой ум"
            android:textSize="16sp"
            android:textColor="#E0E0E0"
            android:layout_marginBottom="48dp" />

        <!-- Difficulty Selection Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/difficulty_card_normal"
            android:padding="20dp"
            android:layout_marginBottom="32dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_difficulty"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal" />

            <RadioGroup
                android:id="@+id/difficulty_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_easy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/difficulty_easy"
                    android:checked="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:padding="20dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/difficulty_selector_easy"
                    android:button="@null"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/radio_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/difficulty_medium"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:padding="20dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/difficulty_selector_medium"
                    android:button="@null"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/radio_hard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/difficulty_hard"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:padding="20dp"
                    android:background="@drawable/difficulty_selector_hard"
                    android:button="@null"
                    android:gravity="center" />
            </RadioGroup>
        </LinearLayout>

        <!-- Start Button -->
        <Button
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/start_game"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary_pressed"
            android:layout_marginBottom="16dp"
            android:elevation="8dp" />

        <!-- Exit Button -->
        <Button
            android:id="@+id/exit_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/exit_game"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_secondary"
            android:elevation="8dp" />

    </LinearLayout>
</ScrollView>
